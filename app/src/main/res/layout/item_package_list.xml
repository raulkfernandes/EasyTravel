<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_package_list_image"
        android:layout_width="0dp"
        android:layout_height="100dp"
        tools:src="@sample/packages.json/packages/image"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/item_package_list_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@sample/packages.json/packages/destination"
        android:textSize="14sp"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:drawable/screen_background_dark_transparent"
        app:layout_constraintStart_toStartOf="@id/item_package_list_image"
        app:layout_constraintEnd_toEndOf="@id/item_package_list_image"
        app:layout_constraintTop_toTopOf="@id/item_package_list_image"
        app:layout_constraintBottom_toBottomOf="@id/item_package_list_image"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.0"/>

    <View
        android:id="@+id/item_package_list_divisor"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_package_list_image" />

    <TextView
        android:id="@+id/item_package_list_stay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@sample/packages.json/packages/stay"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_package_list_divisor"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/item_package_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@sample/packages.json/packages/price"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintStart_toStartOf="@id/item_package_list_stay"
        app:layout_constraintTop_toBottomOf="@id/item_package_list_stay"/>

</androidx.constraintlayout.widget.ConstraintLayout>